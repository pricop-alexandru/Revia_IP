@page
@model Revia.Pages.Reviews.CreateModel
@{
    ViewData["Title"] = "Scrie Recenzie";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mt-4">Scrie o recenzie pentru <span class="text-primary">@Model.LocationName</span></h2>
        <hr />

        @* MODIFICARE: Adăugăm enctype="multipart/form-data" pentru a permite upload-ul de fișiere *@
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Review.LocationId" />

            <div class="form-group mb-3">
                <label asp-for="Review.Rating" class="control-label fw-bold">Notă (1-5)</label>
                <select asp-for="Review.Rating" class="form-select">
                    <option value="5">★★★★★ (Excelent)</option>
                    <option value="4">★★★★ (Bun)</option>
                    <option value="3">★★★ (Mediu)</option>
                    <option value="2">★★ (Slab)</option>
                    <option value="1">★ (Foarte Slab)</option>
                </select>
                <span asp-validation-for="Review.Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Review.Text" class="control-label fw-bold">Părerea ta</label>
                <textarea asp-for="Review.Text" class="form-control" rows="5" placeholder="Descrie experiența (minim 30 caractere)..."></textarea>
                <span asp-validation-for="Review.Text" class="text-danger"></span>
                <small class="text-muted">Minim 30 de caractere pentru a primi XP.</small>
            </div>

            @* MODIFICARE: Adăugăm câmpul pentru încărcarea pozei *@
            <div class="form-group mb-4">
                <label class="control-label fw-bold"><i class="fas fa-camera me-1"></i> Adaugă o poză (Opțional)</label>
                <input type="file" name="uploadedFile" class="form-control" accept="image/*" />
                <small class="text-dark-50">Imaginile ajută ceilalți utilizatori să vadă atmosfera localului.</small>
            </div>

            <button type="submit" class="btn btn-success w-100 py-2 fw-bold shadow-sm">
                <i class="fas fa-paper-plane me-1"></i> Publică Recenzia (+50 XP)
            </button>
        </form>

        <div class="mt-3 text-center">
            <a asp-page="/Locations/Details" asp-route-id="@Model.Review.LocationId" class="text-decoration-none">
                <i class="fas fa-arrow-left me-1"></i> Înapoi la local
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}