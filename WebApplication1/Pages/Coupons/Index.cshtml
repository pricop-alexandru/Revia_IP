@page
@model Revia.Pages.Coupons.IndexModel
@{
    ViewData["Title"] = "Oferte " + Model.Location.Name;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-tags text-warning"></i> Oferte la @Model.Location.Name</h2>

        @if (Model.IsOwnerOfLocation)
        {
            <a asp-page="/Coupons/Create" asp-route-locationId="@Model.Location.Id" class="btn btn-success">
                <i class="fas fa-plus"></i> Creează Ofertă Nouă
            </a>
        }
    </div>

    @if (!Model.CouponsList.Any())
    {
        <div class="alert alert-info">Momentan nu există oferte active la această locație.</div>
    }
    else
    {
        <div class="row">
        @foreach (var item in Model.CouponsList)
{
    bool isLevelLocked = !Model.IsOwnerOfLocation && Model.UserLevel < item.Coupon.RequiredLevel;
    bool isPopularityReached = item.LocationTotalReviews >= item.Coupon.RequiredReviewsCount;

    <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm @(isLevelLocked ? "bg-light opacity-75" : (item.UserHasIt ? "border-success" : "border-primary"))">
            
            @* Headerul cardului *@
            <div class="card-header @(isLevelLocked ? "bg-dark text-white" : (item.UserHasIt ? "bg-success text-white" : "bg-primary text-white"))">
                <h5 class="mb-0">
                    @if (isLevelLocked) { <i class="fas fa-lock me-2"></i> }
                    @item.Coupon.Title
                </h5>
            </div>

            <div class="card-body">
                @if (isLevelLocked)
                {
                    @* CAZ 1: BLOCAT DE NIVEL *@
                    <div class="text-center py-2">
                        <span class="badge bg-danger mb-2">Necesită Nivel @item.Coupon.RequiredLevel</span>
                        <p class="small text-muted">Ești la nivelul @Model.UserLevel. Progres nivel:</p>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-danger" style="width: @( (double)Model.UserLevel / item.Coupon.RequiredLevel * 100 )%"></div>
                        </div>
                    </div>
                }
                else
                {
                    @* CAZ 2: NIVEL OK -> VERIFICĂM POPULARITATEA *@
                    <p class="card-text">@item.Coupon.Description</p>
                    <hr />

                    @if (item.UserHasIt)
                    {
                        <div class="alert alert-success text-center py-2">
                            <i class="fas fa-check-circle"></i> <strong>Ai deblocat acest cupon!</strong>
                            <br /><small>Îl găsești în secțiunea "Cupoanele Mele".</small>
                        </div>
                    }
                    else
                    {
                        @* Bara de Progres pentru Popularitate Local *@
                        <div class="d-flex justify-content-between small mb-1">
                            <span class="fw-bold">Popularitate Local:</span>
                            <span>@item.LocationTotalReviews / @item.Coupon.RequiredReviewsCount recenzii</span>
                        </div>

                        <div class="progress mb-3" style="height: 12px;">
                            @{
                                var popularityPct = (double)item.LocationTotalReviews / item.Coupon.RequiredReviewsCount * 100;
                                if (popularityPct > 100) popularityPct = 100;
                                var barClass = isPopularityReached ? "bg-success" : "bg-info";
                            }
                            <div class="progress-bar @barClass progress-bar-striped progress-bar-animated" 
                                 style="width: @popularityPct%"></div>
                        </div>

                        @if (isPopularityReached)
                        {
                            <div class="alert alert-warning py-2 text-center small">
                                <i class="fas fa-star text-warning"></i> 
                                <strong>Prag atins!</strong> Scrie o recenzie la acest local pentru a primi cuponul acum.
                            </div>
                        }
                        else
                        {
                            <p class="text-center small text-muted">
                                Mai sunt necesare @(item.Coupon.RequiredReviewsCount - item.LocationTotalReviews) recenzii de la comunitate.
                            </p>
                        }
                    }
                }
            </div>
            
            @if (Model.IsOwnerOfLocation)
            {
                <div class="card-footer bg-transparent border-0">
                    <form method="post" asp-page-handler="Delete" asp-route-couponId="@item.Coupon.Id" asp-route-locationId="@Model.Location.Id">
                        <button class="btn btn-outline-danger btn-sm w-100">Elimină Ofertă</button>
                    </form>
                </div>
            }
        </div>
    </div>
}
        </div>
    }

    <div class="mt-3">
        <a asp-page="/Locations/Details" asp-route-id="@Model.Location.Id" class="btn btn-outline-secondary">Înapoi la Local</a>
    </div>
</div>