@page
@model Revia.Pages.Coupons.IndexModel
@{
    ViewData["Title"] = "Oferte " + Model.Location.Name;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-tags text-warning"></i> Oferte la @Model.Location.Name</h2>

        @if (Model.IsOwnerOfLocation)
        {
            <a asp-page="/Coupons/Create" asp-route-locationId="@Model.Location.Id" class="btn btn-success">
                <i class="fas fa-plus"></i> Creează Ofertă Nouă
            </a>
        }
    </div>

    @if (!Model.CouponsList.Any())
    {
        <div class="alert alert-info">Momentan nu există oferte active la această locație.</div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.CouponsList)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm @(item.UserHasIt ? "border-success" : "border-secondary")">
                        <div class="card-header @(item.UserHasIt ? "bg-success text-white" : "bg-light")">
                            <h5 class="mb-0">@item.Coupon.Title</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@item.Coupon.Description</p>
                            <hr />

                            @if (Model.IsOwnerOfLocation)
                            {
                                <div class="alert alert-warning py-2 small">
                                    <i class="fas fa-info-circle"></i> Ești proprietarul.
                                    Condiție: @item.Coupon.RequiredReviewsCount recenzii.
                                </div>
                                <form method="post" asp-page-handler="Delete" asp-route-couponId="@item.Coupon.Id" asp-route-locationId="@Model.Location.Id">
                                    <button class="btn btn-danger btn-sm w-100">Șterge Cuponul</button>
                                </form>
                            }
                            else
                            {
                                @if (item.UserHasIt)
                                {
                                    @if (item.IsClaimed)
                                    {
                                        <button class="btn btn-secondary w-100" disabled>Deja folosit</button>
                                    }
                                    else
                                    {
                                        <div class="text-center text-success mb-2">
                                            <i class="fas fa-check-circle fa-2x"></i><br>
                                            <strong>Ai acest cupon!</strong>
                                        </div>
                                        <a asp-page="/Coupons/MyCoupons" class="btn btn-outline-success w-100">Mergi la Portofel să-l folosești</a>
                                    }
                                }
                                else
                                {
                                    <div class="d-flex justify-content-between small text-muted">
                                        <span>Popularitate Local:</span>
                                        <span>@item.LocationTotalReviews / @item.Coupon.RequiredReviewsCount recenzii</span>
                                    </div>

                                    <div class="progress mt-1">
                                        @{
                                            var pct = (double)item.LocationTotalReviews / item.Coupon.RequiredReviewsCount * 100;
                                            if (pct > 100) pct = 100;
                                        }
                                        <div class="progress-bar bg-info text-white" style="width: @pct%"></div>
                                    </div>

                                    <div class="text-center mt-2 small text-muted">
                                        @if (item.LocationTotalReviews >= item.Coupon.RequiredReviewsCount)
                                        {
                                            <span class="text-success fw-bold">Prag atins! Scrie o recenzie pentru a-l primi.</span>
                                        }
                                        else
                                        {
                                            <span>Localul mai are nevoie de @(item.Coupon.RequiredReviewsCount - item.LocationTotalReviews) recenzii.</span>
                                        }
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-3">
        <a asp-page="/Locations/Details" asp-route-id="@Model.Location.Id" class="btn btn-outline-secondary">Înapoi la Local</a>
    </div>
</div>