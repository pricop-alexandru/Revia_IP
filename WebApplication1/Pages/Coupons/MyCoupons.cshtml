@page
@model Revia.Pages.Coupons.MyCouponsModel
@{
    ViewData["Title"] = "Cupoanele Mele";
}

<div class="container mt-4">
    <h1><i class="fas fa-ticket-alt text-primary"></i> Portofel Cupoane</h1>
    <hr />

    <h3 class="mt-4 text-success">Valabile</h3>
    @if (Model.ActiveCoupons.Any())
    {
        <div class="row">
            @foreach (var uc in Model.ActiveCoupons)
            {
                <div class="col-md-6 mb-3">
                    <div class="card border-success h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@uc.Coupon.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@uc.Coupon.Location.Name</h6>
                            <p class="card-text">@uc.Coupon.Description</p>
                            <small class="text-danger">Expiră: @uc.Coupon.ExpirationDate.ToString("dd.MM.yyyy")</small>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <form method="post" asp-page-handler="Claim" asp-route-id="@uc.Id">
                                <button type="submit" class="btn btn-outline-success w-100" onclick="return confirm('Revendici acest cupon? (Doar la fața locului!)');">
                                    <i class="fas fa-check-circle"></i> Revendică Acum
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Nu ai cupoane active momentan. Lasă recenzii pentru a primi!</p>
    }

    @if (Model.ClaimedCoupons.Any())
    {
        <h3 class="mt-5 text-muted">Istoric (Revendicate)</h3>
        <div class="list-group">
            @foreach (var uc in Model.ClaimedCoupons)
            {
                <div class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-center opacity-75">
                    <div>
                        <h6 class="mb-0 text-decoration-line-through">@uc.Coupon.Title</h6>
                        <small>@uc.Coupon.Location.Name</small>
                    </div>
                    <span class="badge bg-secondary">Revendicat: @uc.DateClaimed?.ToString("d")</span>
                </div>
            }
        </div>
    }
</div>