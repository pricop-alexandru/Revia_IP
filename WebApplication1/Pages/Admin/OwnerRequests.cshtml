@page
@model Revia.Pages.Admin.OwnerRequestsModel
@{
    ViewData["Title"] = "Gestionare Cereri Owner";
}

<h1>Gestionare Cereri Owner</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.PendingRequests.Any())
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Data cererii</th>
                <th>Utilizator</th>
                <th>Nume companie</th>
                <th>CUI</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.PendingRequests)
            {
                <tr>
                    <td>@request.RequestDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@(request.User?.UserName ?? "N/A") (@(request.User?.Email ?? "Fără email"))</td>
                    <td>@request.CompanyName</td>
                    <td>@(request.TaxIdentificationNumber ?? "Nu a furnizat")</td>
                    <td>
                        <form method="post" asp-page-handler="Approve" asp-route-id="@request.Id" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Sigur vrei să aprobi?');">
                                ✓ Aprobă
                            </button>
                        </form>
                        <form method="post" asp-page-handler="Reject" asp-route-id="@request.Id" class="d-inline ms-2">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Sigur vrei să respingi?');">
                                ✗ Respinge
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        Nicio cerere în așteptare.
    </div>
}